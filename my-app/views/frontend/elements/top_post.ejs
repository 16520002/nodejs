<% 
    const collection = 'users'
    const linkPrefix = systemConfig.prefixAdmin +`/${collection}/`
    const folderUpload = 'uploads/articles/'
    const data = items.slice(1,3)
%>
<% include ./../helpers/showCategory %>
<%= JSON.stringify()%>
<section class="top-post-area pt-10">
    <div class="container no-padding">
        <div class="row small-gutters">
            <div  class="col-lg-8 top-post-left">
                <div  class="feature-image-thumb relative">
                    <div class="overlay overlay-bg"></div>
                    <img style="height:507px;" class="img-fluid" src="<%=folderUpload+'/'+items[0].avatar%>" alt="">
                </div>
                <div class="top-post-details">
                    <ul class="tags">
                        <li>
                            <a href="#"><%-showCategoryHelper(categories,items[0].categories.toString()).name%></a>
                        </li>
                    </ul>
                    <a href="/post/<%=items.id%>">
                        <h3 style="margin-right: 20px;"><%=items[0].title%>.</h3>
                    </a>
                    <ul class="meta">
                        <li>
                            <a href="#">
                                <span class="lnr lnr-user"></span>Mark wiens</a>
                        </li>
                        <li>
                            <a href="#">
                                <span class="lnr lnr-calendar-full"></span><%=moment(items[0].createdAt).format(systemConfig.formatTime)%> </a>
                        </li>
                        <li>
                            <a href="#">
                                <span class="lnr lnr-bubble"></span>06 Comments</a>
                        </li>
                    </ul>
                </div>
            </div>
            <div class="col-lg-4 top-post-right">
                <% data.forEach((item)=>{%>
                    <div style="margin-bottom: 10px;" class="single-top-post">
                        <div class="feature-image-thumb relative">
                            <div class="overlay overlay-bg"></div>
                            <img class="img-fluid" src="<%=folderUpload+'/'+item.avatar%>" alt="">
                        </div>
                        <div class="top-post-details">
                            <ul class="tags">
                                <li>
                                    <a href="#"><%-showCategoryHelper(categories,item.categories.toString()).name%></a>
                                </li>
                            </ul>
                            <a href="/post/<%=item.id%>">
                                <h4><%=item.title%>.</h4>
                            </a>
                            <ul class="meta">
                                <li>
                                    <a href="#">
                                        <span class="lnr lnr-user"></span>Mark wiens</a>
                                </li>
                                <li>
                                    <a href="#">
                                        <span class="lnr lnr-calendar-full"></span><%=moment(item.createdAt).format(systemConfig.formatTime)%></a>
                                </li>
                                <li>
                                    <a href="#">
                                        <span class="lnr lnr-bubble"></span>06 Comments</a>
                                </li>
                            </ul>
                        </div>
                    </div>
                <%})%>
                
            </div>
        </div>
    </div>
</section>